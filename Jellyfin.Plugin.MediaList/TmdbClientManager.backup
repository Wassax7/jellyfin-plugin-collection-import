    /// <summary>
    /// Manager class for abstracting the TMDb API client library.
    /// </summary>
    public class TmdbClientManager
    {
        private readonly _client _tmDbClient;

        public TmdbClientManager()
        {
            var apiKey = Plugin.Instance.Configuration.TmdbApiKey;
            apiKey = string.IsNullOrEmpty(apiKey) ? TmdbUtils.ApiKey : apiKey;
            _tmDbClient = new RestClient("https://api.themoviedb.org/3/");

            // Not really interested in NotFoundException
            _tmDbClient.ThrowApiExceptions = false;
        }
        // public Task<GitHubRepo[]> GetPopuar()
        //     => _client.GetJsonAsync<GitHubRepo[]>("movie/popular");
    }

